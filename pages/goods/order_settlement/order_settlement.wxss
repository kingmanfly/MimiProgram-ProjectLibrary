/* pages/goods/order_settlement/order_settlement.wxss */

.view_outside {
  width:100%;
  display: -webkit-flex;
  flex-direction: row; /*row横向  column纵向*/
  padding: 20rpx 0 18rpx 20rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #c3c3c3;
  align-items: center;
}

.view_inside_order {
  width:100%;
  display: -webkit-flex;
  flex-direction: row; /*row横向  column纵向*/
  padding: 20rpx 0 18rpx 20rpx;
  font-size: 30rpx;
}
.view_inside_address {
  width:100%;
  display: -webkit-flex;
  flex-direction: row; /*row横向  column纵向*/
  font-size: 26rpx;
  padding-left: 18rpx;
  padding-bottom:10rpx;
  align-items: center;
}
.more{
  width:30rpx;
  height:40rpx;
  margin-right:40rpx;
}
.address_local{
  width:20rpx;
  height:30rpx;
}
.product_image {
  width: 80px;
  height: 60px;
}
.view_in1 {
  flex: 1;
}

.view_in3 {
  flex: 3;
  margin-top: -5rpx;
}

/*华丽的分割线*/
.divide_line {
  width: 100%;
  height: 20rpx;
  background: #f0f0f0;
}

/*等比例缩放图片*/
.icon_order {
  transform: scale(0.5);
  -ms-transform: scale(0.5);
  -webkit-transform: scale(0.5);
  -o-transform: scale(0.5);
  -moz-transform: scale(0.5);
}

.product_name{
  position:absolute;
  top:0px;
  left:10px;
  padding:0px;
  margin:0px
}
.price {
  position:absolute;
  top:0px;
  right:20px;
  padding:0px;
  margin:0px;
  color: #f56392;
}
.product_dec{
  position:absolute;
  bottom:0px;
  left:10px;
  padding:0px;
  margin:0px;
  color:#8e8e8e;
}
.number {
  position:absolute;
  bottom:0px;
  right:20px;
  padding:0px;
  margin:0px;
  color:#8e8e8e;
}
.order_amount{
  padding-right: 20px;
}
.switch_style{
   margin: auto 20px auto;
}
.submit_order_right{
  height: 100%;
  background-color: #f8457d;
  color: #fff;
  float: right;
  padding: 10px;
}
.total{
  padding: 10px;
  font-size: 30rpx;
}
.footer{
position:fixed;
display: flex;
left:0px;
bottom:0px;
z-index:50;
width:100%;
background:white;
align-items: center;
border-top: 1px solid #8e8e8e;
}